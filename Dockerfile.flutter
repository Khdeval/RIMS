# ── Build stage ──────────────────────────────────────────────
FROM ghcr.io/cirruslabs/flutter:3.19.6 AS builder

WORKDIR /app

COPY dashboard_flutter/ ./

RUN flutter pub get
RUN flutter build web --release --dart-define=API_URL=/api

# ── Serve stage ─────────────────────────────────────────────
FROM nginx:alpine AS runner

COPY --from=builder /app/build/web /usr/share/nginx/html
COPY dashboard_flutter/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
