# ── RIMS Environment Configuration ──────────────────────────

# Application
NODE_ENV="development"          # development | production
PORT=3000                       # API server port

# Database (SQLite default — switch to PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/rims?schema=public"

# CORS — comma-separated origins allowed to call the API
# Use * for development, specific origins for production
CORS_ORIGINS="*"
# CORS_ORIGINS="https://your-app.com,https://dashboard.your-app.com"

# Clover POS Integration (optional)
CLOVER_MERCHANT_ID=""
CLOVER_ACCESS_TOKEN=""
